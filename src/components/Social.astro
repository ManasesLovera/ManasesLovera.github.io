---
const { platform, username } = Astro.props;
const extra = platform === 'linkedin' ? '/in' : '';
---
<a target="_blank" href={`https://www.${platform}.com${extra}/${username}`}>{platform}</a>

<style>
    a {
        padding: 0.5rem 1rem;
        border-radius: 5px;
        color: white;
        background-color: #534bc7;
        text-decoration: none;
    }
</style>